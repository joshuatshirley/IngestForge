# IngestForge Environment Variables
# Copy this file to .env and fill in your values
# cp .env.example .env

# ==============================================
# LLM API Keys (at least one required for LLM features)
# ==============================================

# Google Gemini API
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Alternative Google API key (same as GEMINI_API_KEY)
GOOGLE_API_KEY=

# OpenAI API
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Cohere API (optional, for reranking)
# Get your key at: https://dashboard.cohere.ai/
COHERE_API_KEY=

# ==============================================
# LLM Configuration
# ==============================================

# Default LLM provider: gemini, openai, anthropic, ollama, llamacpp
INGESTFORGE_LLM_PROVIDER=gemini

# Model names (optional, uses defaults if not set)
INGESTFORGE_LLM_MODEL=
# Examples:
#   Gemini: gemini-1.5-flash, gemini-1.5-pro
#   OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
#   Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229

# Temperature for LLM responses (0.0 - 1.0)
INGESTFORGE_LLM_TEMPERATURE=0.7

# ==============================================
# Embedding Configuration
# ==============================================

# Embedding model (uses sentence-transformers)
INGESTFORGE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Batch size for embedding generation (auto-detected based on GPU if not set)
INGESTFORGE_EMBEDDING_BATCH_SIZE=

# ==============================================
# Storage Configuration
# ==============================================

# Data directory (where processed chunks and indexes are stored)
INGESTFORGE_DATA_PATH=.data

# Pending documents directory
INGESTFORGE_PENDING_PATH=.ingest/pending

# Storage backend: chromadb, jsonl
INGESTFORGE_STORAGE_BACKEND=chromadb

# ==============================================
# Processing Configuration
# ==============================================

# Maximum file size in MB for inline processing (larger files queued)
INGESTFORGE_MAX_INLINE_SIZE_MB=10

# Chunk size (target words per chunk)
INGESTFORGE_CHUNK_SIZE=300

# Chunk overlap (words)
INGESTFORGE_CHUNK_OVERLAP=50

# ==============================================
# API Server Configuration
# ==============================================

# API host and port
INGESTFORGE_API_HOST=0.0.0.0
INGESTFORGE_API_PORT=8000

# Enable API authentication (set to a secret key)
INGESTFORGE_API_KEY=

# CORS origins (comma-separated)
INGESTFORGE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================
# Authentication & Security
# ==============================================

# JWT Secret Key (REQUIRED for production)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
INGESTFORGE_JWT_SECRET_KEY=

# Admin Username (REQUIRED for API access)
INGESTFORGE_ADMIN_USERNAME=admin

# Admin Password Hash (REQUIRED for API access)
# Generate hash: python -c "from passlib.context import CryptContext; pwd_context = CryptContext(schemes=['bcrypt'], deprecated='auto'); print(pwd_context.hash('your_secure_password'))"
INGESTFORGE_ADMIN_PASSWORD_HASH=


# ==============================================
# Logging
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR
INGESTFORGE_LOG_LEVEL=INFO

# Log format: json, text
INGESTFORGE_LOG_FORMAT=text

# ==============================================
# External Integrations (optional)
# ==============================================

# Zotero API key (for bibliography integration)
# Get your key at: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=
ZOTERO_USER_ID=

# Notion API key (for export integration)
# Get your key at: https://www.notion.so/my-integrations
NOTION_API_KEY=

# Google Drive (for import integration)
# Set up OAuth credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Dropbox (for import integration)
# Set up app at: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
